  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: build_models.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/build_models.py",
      "args": [
        "${workspaceFolder}/TfL_OpenAPI_specs",
        "${workspaceFolder}/pydantic_tfl_api"
      ],
      "console": "integratedTerminal",
      "preLaunchTask": "copy model files to code folder"
    },
    {
      "name": "Python: Debug Tests - pydantic_tfl_api",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": [
        "debug-test"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHON_TEST_TARGET": "pydantic_tfl_api",
        "PYTEST_ADDOPTS": "--no-cov",
        "PYTHONPATH": "${workspaceFolder}",
        "LOG_LEVEL": "DEBUG"
      }
    },
    // {
    //   "name": "Python: Debug Tests - src",
    //   "type": "debugpy",
